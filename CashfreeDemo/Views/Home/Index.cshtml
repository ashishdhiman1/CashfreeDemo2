

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cashfree Payment Example</title>
</head>
<body>

    <h1>Order Details</h1>

    <!-- Add this inside the head tag or include it in a separate CSS file -->
    <style>
        form {
            max-width: 400px;
            margin: 0 auto;
        }

        label {
            display: block;
            margin-bottom: 4px;
        }

        input {
            width: 100%;
            padding: 6px;
            margin-bottom: 11px;
            box-sizing: border-box;
        }

        button {
            background-color: #4caf50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #45a049;
            }
    </style>

    <!-- Your HTML form goes here -->
    <form asp-controller="Home" asp-action="CreateOrder" method="post">
        <label for="customerId">Customer ID:</label>
        <input type="text" id="customerId" name="customerId" required>

        <label for="customerEmail">Customer Email:</label>
        <input type="text" id="customerEmail" name="customerEmail" required>

        <label for="customerPhone">Customer Phone:</label>
        <input type="text" id="customerPhone" name="customerPhone" required>

        <label for="customerName">Customer Name:</label>
        <input type="text" id="customerName" name="customerName" required>
        <label for="orderId"> Order Id:</label>
        <input type="text" id="orderId" name="orderId" required>
        <label for="orderAmount">Order Amount:</label>
        <input type="number" id="orderAmount" name="orderAmount" required>

        <button type="button" onclick="PayNow()">Pay Now</button>
    </form>


</body>
</html>

@section Scripts{
        <script src="https://sdk.cashfree.com/js/v3/cashfree.js" ></script>
 <script>

    function PayNow() {
        debugger
        $.ajax({
            type: 'POST',
            url: "/Home/CreateOrder",
            data:{
                    'customerId': $("#customerId").val(),
                    'customerEmail': $("#customerEmail").val(),
                    'customerPhone': $("#customerPhone").val(),
                    'customerName': $("#customerName").val(),
                         'orderId': $("#orderId").val(),
                    'orderAmount': $("#orderAmount").val()
            },
            dataType: "json",
            success: function (response) {
                debugger
                    console.log(response.order_status);           
                        const cashfree = window.Cashfree({
                            mode: "sandbox"
                        });

                        let checkoutOptions = {
                            paymentSessionId: response.payment_session_id,
                            redirectTarget: "_self",
                        };
                        cashfree.checkout(checkoutOptions);
                },
            error: function (xhr, status, error) {
                console.error(xhr.responseText); // Log any errors
            }
        });
